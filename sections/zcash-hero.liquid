{{ 'zcash-theme.css' | asset_url | stylesheet_tag }}

<section class="zcash-section zcash-hero color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width zcash-hero__inner">
    <div class="zcash-hero__content">
      <div class="zcash-hero__badge">
        <span class="zcash-logo-mark zcash-logo-mark--xl" aria-hidden="true">{% render 'zcash-logo' %}</span>
        <div>
          {%- if section.settings.eyebrow != blank -%}
            <p class="zcash-section-header__eyebrow">{{ section.settings.eyebrow }}</p>
          {%- endif -%}
          {%- if section.settings.badge_text != blank -%}
            <span>{{ section.settings.badge_text }}</span>
          {%- endif -%}
        </div>
      </div>
      <h1 class="zcash-hero__title">{{ section.settings.heading }}</h1>
      {%- if section.settings.subheading != blank -%}
        <p class="zcash-hero__description">{{ section.settings.subheading }}</p>
      {%- endif -%}
      <div class="zcash-hero__actions">
        {%- if section.settings.deposit_label != blank -%}
          <a class="button button--primary" href="{{ section.settings.deposit_link | default: '#' }}">
            {{ section.settings.deposit_label }}
          </a>
        {%- endif -%}
        {%- if section.settings.withdraw_label != blank -%}
          <a class="button button--secondary" href="{{ section.settings.withdraw_link | default: '#' }}">
            {{ section.settings.withdraw_label }}
          </a>
        {%- endif -%}
      </div>
      {%- if section.settings.hero_note != blank -%}
        <p class="zcash-hero__note">{{ section.settings.hero_note }}</p>
      {%- endif -%}
    </div>
    <div class="zcash-hero__stats">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <div class="zcash-stat" {{ block.shopify_attributes }}>
            <span>{{ block.settings.label }}</span>
            <span>{{ block.settings.value }}</span>
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="zcash-stat">
          <span>Spot price</span>
          <span>$43.27</span>
        </div>
        <div class="zcash-stat">
          <span>24h change</span>
          <span>+4.3%</span>
        </div>
        <div class="zcash-stat">
          <span>Shielded tx</span>
          <span>68%</span>
        </div>
      {%- endif -%}
      <div class="zcash-sparkline" aria-hidden="true"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Zcash hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Introducing Zcash Exchange"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Privacy-grade exchange demo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Private trading without compromise"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Monitor prices, manage a simulated wallet, and showcase the privacy-preserving power of shielded ZEC transactions."
    },
    {
      "type": "text",
      "id": "deposit_label",
      "label": "Deposit button label",
      "default": "Deposit ZEC"
    },
    {
      "type": "url",
      "id": "deposit_link",
      "label": "Deposit button link"
    },
    {
      "type": "text",
      "id": "withdraw_label",
      "label": "Withdraw button label",
      "default": "Withdraw ZEC"
    },
    {
      "type": "url",
      "id": "withdraw_link",
      "label": "Withdraw button link"
    },
    {
      "type": "textarea",
      "id": "hero_note",
      "label": "Helper note",
      "default": "Demo-only interface â€“ no real funds move through this exchange."
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "accent-2", "label": "Accent 2" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Spot price"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Value",
          "default": "$43.27"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Zcash hero",
      "blocks": [
        { "type": "stat" },
        { "type": "stat" },
        { "type": "stat" }
      ]
    }
  ]
}
{% endschema %}
