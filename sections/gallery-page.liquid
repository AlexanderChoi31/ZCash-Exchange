<section class="nordic-shell">
  <header class="nordic-hero">
    <p class="nordic-hero__eyebrow">Gallery</p>
    <h1>{{ section.settings.headline }}</h1>
    <p>{{ section.settings.copy }}</p>
  </header>
  <div class="nordic-history">
    {%- for block in section.blocks -%}
      <article class="nordic-history__entry" {{ block.shopify_attributes }}>
        {%- if block.settings.image_url != blank -%}
          <img src="{{ block.settings.image_url }}" alt="Nordic material study">
        {%- endif -%}
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.body }}</p>
        {%- if block.settings.link_url != blank -%}
          <p><a href="{{ block.settings.link_url }}" target="_blank" rel="noopener">{{ block.settings.link_label | default: 'View site' }}</a></p>
        {%- endif -%}
      </article>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "Gallery page",
  "settings": [
    { "type": "text", "id": "headline", "label": "Headline", "default": "Material studies" },
    { "type": "textarea", "id": "copy", "label": "Description", "default": "A quiet gallery of wood grain, linen, stone, and light." }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Gallery item",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Oak + wool" },
        { "type": "textarea", "id": "body", "label": "Body", "default": "Soft oak cabinetry against natural wool textiles." },
        { "type": "text", "id": "image_url", "label": "Image URL", "default": "https://images.unsplash.com/photo-1505691723518-36a5ac3be353?auto=format&fit=crop&w=1200&q=60" },
        { "type": "text", "id": "link_url", "label": "Link URL", "default": "https://nordic.example" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "View site" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Gallery page",
      "blocks": [ { "type": "image" }, { "type": "image" } ]
    }
  ]
}
{% endschema %}
