{{ 'zcash-theme.css' | asset_url | stylesheet_tag }}

<section class="zcash-section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="zcash-section-header">
      <div>
        {%- if section.settings.eyebrow != blank -%}
          <p class="zcash-section-header__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}
        <h2 class="zcash-section-header__title">{{ section.settings.heading }}</h2>
      </div>
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="zcash-auth__grid">
      <div class="zcash-card zcash-auth__card">
        <h3>{{ section.settings.login_heading }}</h3>
        <p>{{ section.settings.login_body }}</p>
        <form aria-label="Login form">
          <label for="zcash-login-email-{{ section.id }}">Email</label>
          <input id="zcash-login-email-{{ section.id }}" type="email" placeholder="team@zcash.exchange">
          <label for="zcash-login-password-{{ section.id }}">Password</label>
          <input id="zcash-login-password-{{ section.id }}" type="password" placeholder="••••••••">
          <button type="button" class="button button--primary">{{ section.settings.login_cta }}</button>
        </form>
      </div>

      <div class="zcash-card zcash-auth__card">
        <h3>{{ section.settings.signup_heading }}</h3>
        <p>{{ section.settings.signup_body }}</p>
        <form aria-label="Signup form">
          <label for="zcash-signup-name-{{ section.id }}">Name</label>
          <input id="zcash-signup-name-{{ section.id }}" type="text" placeholder="Satoshi Z.">
          <label for="zcash-signup-email-{{ section.id }}">Email</label>
          <input id="zcash-signup-email-{{ section.id }}" type="email" placeholder="founder@privacy.test">
          <label for="zcash-signup-password-{{ section.id }}">Create password</label>
          <input id="zcash-signup-password-{{ section.id }}" type="password" placeholder="••••••••">
          <button type="button" class="button button--secondary">{{ section.settings.signup_cta }}</button>
        </form>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Zcash auth mock",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Account" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Login / Signup mock pages" },
    { "type": "textarea", "id": "description", "label": "Description", "default": "Demonstrate how onboarding could look without touching real authentication flows." },
    { "type": "text", "id": "login_heading", "label": "Login heading", "default": "Login" },
    { "type": "textarea", "id": "login_body", "label": "Login body", "default": "Use this mock panel to walk through 2FA, device approvals, or explain shielded wallet unlock flows." },
    { "type": "text", "id": "login_cta", "label": "Login button label", "default": "Sign in" },
    { "type": "text", "id": "signup_heading", "label": "Signup heading", "default": "Create an account" },
    { "type": "textarea", "id": "signup_body", "label": "Signup body", "default": "Highlight KYC, tiered verification, and privacy controls for new customers." },
    { "type": "text", "id": "signup_cta", "label": "Signup button label", "default": "Join waitlist" },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "accent-2", "label": "Accent 2" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zcash auth mock"
    }
  ]
}
{% endschema %}
