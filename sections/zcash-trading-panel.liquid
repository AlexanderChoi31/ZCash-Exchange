{{ 'zcash-theme.css' | asset_url | stylesheet_tag }}

<section class="zcash-section color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <div class="zcash-section-header">
      <div>
        {%- if section.settings.eyebrow != blank -%}
          <p class="zcash-section-header__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}
        <h2 class="zcash-section-header__title">{{ section.settings.heading }}</h2>
      </div>
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="zcash-grid zcash-grid--three">
      <div class="zcash-card">
        <h3>Buy ZEC</h3>
        <form class="zcash-form" aria-label="Buy ZEC form">
          <label for="buy-amount-{{ section.id }}">Amount</label>
          <input id="buy-amount-{{ section.id }}" name="buy_amount" type="number" min="0" step="0.01" placeholder="0.00">
          <label for="buy-fiat-{{ section.id }}">Pay with</label>
          <select id="buy-fiat-{{ section.id }}">
            <option value="USD">USD • Bank Transfer</option>
            <option value="card">Debit Card</option>
            <option value="usdc">USDC Balance</option>
          </select>
          <button type="button" class="button button--primary">{{ section.settings.buy_cta }}</button>
        </form>
      </div>

      <div class="zcash-card">
        <h3>Sell ZEC</h3>
        <form class="zcash-form" aria-label="Sell ZEC form">
          <label for="sell-amount-{{ section.id }}">Amount</label>
          <input id="sell-amount-{{ section.id }}" name="sell_amount" type="number" min="0" step="0.01" placeholder="0.00">
          <label for="sell-destination-{{ section.id }}">Receive in</label>
          <select id="sell-destination-{{ section.id }}">
            <option value="usd">USD Wallet</option>
            <option value="zec">ZEC Shielded</option>
            <option value="btc">BTC Wallet</option>
          </select>
          <button type="button" class="button button--secondary">{{ section.settings.sell_cta }}</button>
        </form>
      </div>

      <div class="zcash-card zcash-wallet">
        <p class="zcash-section-header__eyebrow">Wallet balance (simulated)</p>
        <p class="zcash-wallet__balance">{{ section.settings.wallet_balance }}</p>
        <div class="zcash-wallet__chips">
          <span class="zcash-chip">Available · {{ section.settings.wallet_available }}</span>
          <span class="zcash-chip">Pending · {{ section.settings.wallet_pending }}</span>
          <span class="zcash-chip">Shielded · {{ section.settings.wallet_shielded }}</span>
        </div>
        <div class="zcash-actions">
          <button type="button" class="button button--primary">{{ section.settings.deposit_label }}</button>
          <button type="button" class="button button--secondary">{{ section.settings.withdraw_label }}</button>
          <button type="button" class="button button--secondary">{{ section.settings.convert_label }}</button>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Zcash trading panel",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Trading desk"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Buy / Sell mock UI"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Two-pane order tickets demonstrate how customers could swap ZEC with USD while reinforcing that this interface is for demos only."
    },
    {
      "type": "text",
      "id": "buy_cta",
      "label": "Buy button label",
      "default": "Buy ZEC"
    },
    {
      "type": "text",
      "id": "sell_cta",
      "label": "Sell button label",
      "default": "Sell ZEC"
    },
    {
      "type": "text",
      "id": "wallet_balance",
      "label": "Wallet balance",
      "default": "1,245.82 ZEC"
    },
    {
      "type": "text",
      "id": "wallet_available",
      "label": "Available balance",
      "default": "845.21 ZEC"
    },
    {
      "type": "text",
      "id": "wallet_pending",
      "label": "Pending balance",
      "default": "120.00 ZEC"
    },
    {
      "type": "text",
      "id": "wallet_shielded",
      "label": "Shielded balance",
      "default": "280.61 ZEC"
    },
    {
      "type": "text",
      "id": "deposit_label",
      "label": "Deposit button label",
      "default": "Deposit ZEC"
    },
    {
      "type": "text",
      "id": "withdraw_label",
      "label": "Withdraw button label",
      "default": "Withdraw ZEC"
    },
    {
      "type": "text",
      "id": "convert_label",
      "label": "Convert button label",
      "default": "Convert ZEC to USD"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "accent-2", "label": "Accent 2" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zcash trading panel"
    }
  ]
}
{% endschema %}
