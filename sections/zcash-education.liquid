{{ 'zcash-theme.css' | asset_url | stylesheet_tag }}

<section class="zcash-section color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width">
    <div class="zcash-section-header">
      <div>
        {%- if section.settings.eyebrow != blank -%}
          <p class="zcash-section-header__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}
        <h2 class="zcash-section-header__title">{{ section.settings.heading }}</h2>
      </div>
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
    </div>

    <div class="zcash-education__grid">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          <article class="zcash-card zcash-education-card" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.body }}</p>
            {%- if block.settings.link_label != blank -%}
              <a class="button button--secondary" href="{{ block.settings.link | default: '#' }}">
                {{ block.settings.link_label }}
              </a>
            {%- endif -%}
          </article>
        {%- endfor -%}
      {%- else -%}
        <article class="zcash-card zcash-education-card">
          <h4>Shielded addresses 101</h4>
          <p>Explain how z-addresses protect sender, receiver, and amount details with zk-SNARKs.</p>
        </article>
        <article class="zcash-card zcash-education-card">
          <h4>Compliance & privacy</h4>
          <p>Show how viewing keys enable audits without sacrificing user privacy.</p>
        </article>
        <article class="zcash-card zcash-education-card">
          <h4>Network security</h4>
          <p>Highlight the role of proof-of-work and NU5 in safeguarding shielded payments.</p>
        </article>
      {%- endif -%}
    </div>

    {%- if section.settings.cta_label != blank -%}
      <div class="zcash-card" style="margin-top: 2rem;">
        <div class="zcash-section-header">
          <div>
            <p class="zcash-section-header__eyebrow">Learning center</p>
            <h3>{{ section.settings.cta_heading }}</h3>
          </div>
          <div class="zcash-actions">
            <a class="button button--primary" href="{{ section.settings.cta_link | default: '#' }}">
              {{ section.settings.cta_label }}
            </a>
          </div>
        </div>
        <p>{{ section.settings.cta_body }}</p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Zcash education",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Education" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Explain Zcash with confidence" },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Dedicated content tiles help product teams walk through shielded addresses, privacy guarantees, and compliance talking points."
    },
    { "type": "text", "id": "cta_heading", "label": "CTA heading", "default": "Deep dive: Shielded transactions" },
    {
      "type": "textarea",
      "id": "cta_body",
      "label": "CTA body",
      "default": "Link to docs, blog posts, or internal enablement material that explains how the exchange keeps ZEC private yet auditable."
    },
    { "type": "text", "id": "cta_label", "label": "CTA label", "default": "Explore education pages" },
    { "type": "url", "id": "cta_link", "label": "CTA link" },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-2",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "accent-2", "label": "Accent 2" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "topic",
      "name": "Topic",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Shielded addresses 101" },
        { "type": "textarea", "id": "body", "label": "Body", "default": "Explain how z-addresses hide transaction metadata with zk-SNARKs." },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "Read more" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Zcash education",
      "blocks": [
        { "type": "topic" },
        { "type": "topic" },
        { "type": "topic" }
      ]
    }
  ]
}
{% endschema %}
