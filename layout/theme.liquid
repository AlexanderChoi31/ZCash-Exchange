<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ shop.name }} â€” Nordic Minimalism Style</title>
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body class="theme-nordic">
    <button class="nordic-hamburger" aria-label="Open menu" id="nordic-menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <nav class="nordic-drawer" id="nordic-drawer">
      <div class="nordic-drawer__inner">
        <p class="nordic-drawer__eyebrow">Explore</p>
        <a href="/pages/gallery">Gallery</a>
        <a href="/pages/founder">Founder</a>
        <a href="/pages/hello">hello :)</a>
      </div>
    </nav>
    <main>
      {{ content_for_layout }}
    </main>
    {{ content_for_footer }}
    <script>
      (function () {
        var button = document.getElementById('nordic-menu-toggle');
        var drawer = document.getElementById('nordic-drawer');
        if (!button || !drawer) return;
        button.addEventListener('click', function () {
          drawer.classList.toggle('is-open');
          button.classList.toggle('is-open');
        });
      })();
    </script>
  </body>
</html>
